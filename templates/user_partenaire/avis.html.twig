{% extends 'base.html.twig' %}

{% block title %}Avis pour {{ partenaire.nom }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Avis sur {{ partenaire.nom }}</h1>

        <h2 class="mt-5 mb-4">Les avis des utilisateurs :</h2>

        {% if avis is empty %}
            <div class="alert alert-info text-center">
                Aucun avis pour ce partenaire.
            </div>
        {% else %}
            <ul class="list-group">
                {% for opinion in avis %}
                    <li class="list-group-item">{{ opinion.commentaire }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <div class="mt-5 text-center">
            <a href="{{ path('categorie_partenaires', {'id': categorie.id}) }}" class="btn btn-secondary">
                ⬅️ Retour aux partenaires
            </a>
        </div>
    </div>
{% endblock %}
