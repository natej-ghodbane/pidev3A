{% extends 'base-back.html.twig' %}

{% block title %}Modifier un Pack{% endblock %}
{% block body %}
<main id="main" class="main">
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-warning">Modifier un Pack</h1>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.nom_pack) }}
            {{ form_widget(form.nom_pack, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom_pack) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix) }}
        </div>

        <div class="form-group">
            {{ form_label(form.duree) }}
            {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.duree) }}
        </div>

        <div class="form-group">
            {{ form_label(form.avantages) }}
            {{ form_widget(form.avantages, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.avantages) }}
        </div>

        <div class="form-group">
            {{ form_label(form.statut) }}
            {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.statut) }}
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>

        {{ form_end(form) }}

    </div>
</main>
{% endblock %}
