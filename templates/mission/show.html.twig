{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Id_recompense</th>
                <td>{{ mission.idRecompense ? mission.idRecompense.description : 'N/A' }}</td>

            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Points_recompense</th>
                <td>{{ mission.pointsRecompense }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ mission.statut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mission_index') }}">back to list</a>

