{% extends 'base-back.html.twig' %}

{% block title %}Statistiques des Missions{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container mt-5">

            <h1 class="text-center mb-4 text-primary">
                üìä Statistiques des Missions
            </h1>

            <div class="card shadow-lg p-4 rounded-lg custom-bg-light">
                <div class="card-body">

                    <div class="row g-4">

                        <!-- üéØ Doughnut Missions Valid√©es -->
                        <div class="col-lg-6">
                            <div class="card p-3">
                                <h5 class="card-title text-center text-info">üéØ R√©partition des Missions Valid√©es (%)</h5>
                                <canvas id="missionChart" style="max-height: 350px;"></canvas>

                                <!-- üåü L√©gende manuelle -->
                                <div class="mt-4">
                                    {% set colors = ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#ef4444', '#3b82f6', '#a855f7', '#ec4899', '#f97316', '#10b981'] %}
                                    {% for m in missionStats %}
                                        <div class="d-flex align-items-center mb-2">
                                            <div style="width: 14px; height: 14px; border-radius: 50%; background-color: {{ colors[loop.index0 % colors|length] }}; margin-right: 10px;"></div>
                                            <span style="font-size: 14px;">{{ m.missionName }}</span>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <!-- üìÖ Line Chart Validations par Jour -->
                        <div class="col-lg-6">
                            <div class="card p-3">
                                <h5 class="card-title text-center text-success">üìÖ Evolution des Validations</h5>
                                <canvas id="validationDayChart" style="max-height: 350px;"></canvas>
                            </div>
                        </div>

                        <!-- üèÜ Top Utilisateurs -->
                        <div class="col-lg-12">
                            <div class="card p-3">
                                <h5 class="card-title text-center text-warning">üèÜ Top 5 Utilisateurs</h5>
                                <canvas id="topUsersChart" style="max-height: 400px;"></canvas>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const colors = [
                '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#ef4444',
                '#3b82f6', '#a855f7', '#ec4899', '#f97316', '#10b981'
            ];

            // üéØ Donut Chart Missions Valid√©es
            new Chart(document.querySelector('#missionChart'), {
                type: 'doughnut',
                data: {
                    labels: {{ missionStats|map(m => m.missionName)|json_encode|raw }},
                    datasets: [{
                        data: {{ missionStats|map(m => m.percentage)|json_encode|raw }},
                        backgroundColor: colors,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    cutout: '70%',
                    plugins: {
                        legend: { display: false }, // on cache la l√©gende auto
                        tooltip: {
                            callbacks: {
                                label: context => `${context.parsed.toFixed(1)}%`
                            }
                        }
                    }
                }
            });

            // üìÖ Line Chart Validation par Jour
            new Chart(document.querySelector('#validationDayChart'), {
                type: 'line',
                data: {
                    labels: {{ validationsPerDay|map(v => v.day)|json_encode|raw }},
                    datasets: [{
                        label: 'Validations',
                        data: {{ validationsPerDay|map(v => v.total)|json_encode|raw }},
                        backgroundColor: 'rgba(34, 197, 94, 0.2)',
                        borderColor: '#22c55e',
                        fill: true,
                        tension: 0.4,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true },
                        x: { grid: { color: '#e2e8f0' } }
                    }
                }
            });

            // üèÜ Top Users Chart
            new Chart(document.querySelector('#topUsersChart'), {
                type: 'bar',
                data: {
                    labels: {{ topUsers|map(u => u.username)|json_encode|raw }},
                    datasets: [{
                        label: 'Missions Valid√©es',
                        data: {{ topUsers|map(u => u.validations)|json_encode|raw }},
                        backgroundColor: '#ffc793',
                        borderRadius: 6,
                        barThickness: 24
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    scales: {
                        x: { beginAtZero: true },
                        y: { beginAtZero: true }
                    }
                }
            });

        });
    </script>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: #f5f7fa;
        }
        .custom-bg-light {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(12px);
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        }
        .card {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(12px);
            border-radius: 16px;
            border: none;
            transition: 0.3s ease;
        }
        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }
        h5.card-title {
            font-weight: bold;
        }
        .pagetitle h1 {
            font-weight: 800;
            font-size: 34px;
            color: #2d3748;
        }
    </style>
{% endblock %}
