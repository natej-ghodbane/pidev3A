{% extends 'base.html.twig' %}

{% block title %}Missions Valid√©es{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4 fw-bold" style="color: #343a40;">üéØ Missions Valid√©es</h1>

        {% if missions is not empty %}
            <p class="text-center text-muted mb-5" style="font-size: 1.1rem;">
                üèÜ Vous avez valid√© <strong>{{ missions|length }}</strong> missions !
            </p>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for mission in missions %}
                    <div class="col">
                        <div class="card shadow-sm border-0 p-4 bg-white position-relative animate__animated animate__fadeInUp" style="border-radius: 15px;">
                            <div class="card-body d-flex flex-column justify-content-between h-100">
                                <div>
                                    <h5 class="card-title fw-bold mb-3" style="min-height: 60px; color: #212529;">
                                        üìç {{ mission.mission.description }}
                                    </h5>
                                    <p class="mb-2 text-muted">
                                        <strong>Points :</strong> {{ mission.pointsGagnes }} pts
                                    </p>
                                    <p class="text-muted small mb-0">
                                        üìÖ Valid√© le {{ mission.validatedAt|date('d/m/Y') }}
                                    </p>
                                </div>

                                <div class="text-center mt-4">
                                    <span class="badge bg-light text-dark border" style="font-size: 0.95rem; padding: 8px 20px; border-radius: 12px;">
                                        ‚úÖ Mission valid√©e
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-light text-center mt-5 p-4 border" style="font-size: 1.1rem; border-radius: 15px; color: #6c757d;">
                Vous n'avez encore valid√© aucune mission.
            </div>
        {% endif %}
    </div>

    <style>
        body {
            background: #f8f9fa;
        }

        .card {
            background-color: #ffffff;
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid #dee2e6;
        }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        }

        .card-title {
            font-size: 1.1rem;
        }
    </style>

    {# Ajout Animate.css pour animations #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
{% endblock %}
